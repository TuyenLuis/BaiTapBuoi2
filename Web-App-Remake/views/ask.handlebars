<section class="main-question">
        <div>
            <h1>Hãy hỏi cộng đồng một câu hỏi đúng/sai hoặc có/không</h1>
            <form action="/question/add" method="POST">
                <textarea name="question"></textarea>
                <span>Còn <span id="character">200</span>/200 kí tự</span>
                <button type="submit">Gửi</button>
            </form>
        </div>
</section>

<script>
    var textArea = document.querySelector("textarea");
    textArea.addEventListener("keyup", function(evt){
        document.querySelector("#character").innerText = 200 - textArea.value.length;
    })
    


</script>